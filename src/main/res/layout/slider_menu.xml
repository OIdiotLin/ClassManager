<?xml version="1.0" encoding="utf-8"?>
<com.oidiotlin.classmanager.view.CustomSlider xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_menu">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/menu_button_manager"
            android:src="@drawable/ic_group"
            android:contentDescription="@string/title_activity_manager"
            android:background="@color/bg_manager_fragment"
            style="@style/MenuContentButtonStyle"/>
        <ImageButton
            android:id="@+id/menu_button_randpick"
            android:src="@drawable/ic_randpick"
            android:contentDescription="@string/title_activity_randpick"
            android:background="@color/bg_randPick_fragment"
            style="@style/MenuContentButtonStyle"/>
    </GridLayout>
</com.oidiotlin.classmanager.view.CustomSlider>